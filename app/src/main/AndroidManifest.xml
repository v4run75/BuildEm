        <activity android:name=".activities.IssuedItemsFormLoc" android:windowSoftInputMode="stateHidden" android:screenOrientation="portrait"  />
        <activity android:name=".activities.LocalPurchaseFormLoc" android:windowSoftInputMode="stateHidden" android:screenOrientation="portrait"  />
        <activity android:name=".activities.LocalPurchaseKotlin" android:windowSoftInputMode="stateHidden" android:screenOrientation="portrait" />
