        android:icon="@mipmap/ic_buildnlive_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_buildnlive_logo_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="buildnlive.com.buildem.activities.HomeActivity"  android:windowSoftInputMode="stateHidden" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW"/>

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="buildnlive.com.buildem.activities.MarkAttendance" android:windowSoftInputMode="stateHidden" android:screenOrientation="portrait" />
        <activity android:name="buildnlive.com.buildem.activities.AddItem" android:windowSoftInputMode="stateHidden" android:screenOrientation="portrait"/>
        <activity android:name="buildnlive.com.buildem.activities.IssuedItems" android:windowSoftInputMode="stateHidden" android:screenOrientation="portrait"/>
        <activity android:name="buildnlive.com.buildem.activities.RequestItems" android:windowSoftInputMode="stateHidden" android:screenOrientation="portrait"/>
        <activity android:name="buildnlive.com.buildem.activities.WorkProgress" android:windowSoftInputMode="stateHidden" android:screenOrientation="portrait" />
        <activity android:name="buildnlive.com.buildem.activities.DailyWorkProgressActivities" android:windowSoftInputMode="stateHidden" android:screenOrientation="portrait"/>
