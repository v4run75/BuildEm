        <activity android:name=".activities.WorkProgressLoc" android:windowSoftInputMode="stateHidden" android:screenOrientation="portrait"/>
        <activity android:name=".activities.PlanningLoc" android:windowSoftInputMode="stateHidden" android:screenOrientation="portrait"/>


        <activity android:name="buildnlive.com.buildem.activities.NotificationActivity" android:windowSoftInputMode="stateHidden" android:screenOrientation="portrait"/>

        <activity android:name=".activities.FcmNotificationActivity" android:windowSoftInputMode="stateHidden" android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="NOTIFICATION_BUILD" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.ServiceDetailsActivity" android:windowSoftInputMode="stateHidden" android:screenOrientation="portrait"/>


        <service android:name=".Notifications.FirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>


        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@mipmap/ic_launcher_foreground" />
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/colorAccent" />

        <service
            android:name=".FetchAddressIntentService"
            android:exported="false"/>

